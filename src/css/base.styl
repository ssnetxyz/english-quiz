html {
  overflow-y: scroll;
}

html, body {
  padding: 0;
  margin: 0;
  font-size: 24px;
}

h1, h2 {
  font-size: 2em;
  margin: 5vh 0;

  .mp3player {
    position:relative;
    left: -0.5em;
  }
}

h3 {
  margin: 40px 0 0;
  text-align: left;
}

iframe {
  margin-bottom: 2vh;
}

ul {
  list-style-type: none;
  padding: 0;
}

li {
  display: inline-block;
  margin: 0 10px;
}

a {
  color: #42b983;
}

.page {
  display: flex;
  text-align: left;

  p {
    margin: 0.5rem 0;
    line-height: 1.5rem;
  }

  .dimmed {
    margin: 0.5rem 0.5rem;
    font-size: 0.8rem;
    letter-spacing: 0;
    color: #666;
    font-family: 'Yu Gothic', sans-serif;
  }
}

.app {
  font-family: 'Amaranth', 'Meiryo';
  cursive;
  letter-spacing: 2px;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-align: center;
  color: #2c3e50;
  margin-bottom: 5vh;
}

.container {
  width: 900px;
  max-width: 100%;
  margin: 0 auto;
}
